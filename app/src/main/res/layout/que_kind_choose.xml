<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:text="选择求助类型"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_next"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="下一步"
            android:textColor="@color/colorP" />
    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_choose_kind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_study"
            style="@style/kind_menu_item"

            android:drawableTop="@drawable/menu_study"
            android:text="学习" />

        <RadioButton
            android:id="@+id/rb_life"
            style="@style/kind_menu_item"
            android:drawableTop="@drawable/menu_life"
            android:text="生活"
            />

        <RadioButton
            android:id="@+id/rb_emotion"
            style="@style/kind_menu_item"
            android:drawableTop="@drawable/menu_emotion"
            android:text="情感" />

        <RadioButton
            android:id="@+id/rb_other"
            style="@style/kind_menu_item"
            android:drawableTop="@drawable/menu_other"
            android:text="其他" />
    </RadioGroup>

    <Button
        android:id="@+id/bt_exit_choose_kind"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_exit" />
</LinearLayout>